{
  "manifest_version": 3,
  "name": "Notion Reading List",
  "version": "1.0.0",
  "description": "A browser extension to capture URLs and manage reading list",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://api.notion.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Notion Reading List"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}